<!-- Card Component -->
<div class="content-card <%= locals.className ? className : '' %>">
  <% if (locals.image) { %>
  <div class="content-card-image">
    <img src="<%= image %>" alt="<%= title || 'Card image' %>" />
  </div>
  <% } %>
  
  <div class="content-card-body">
    <% if (title) { %>
    <h3 class="content-card-title">
      <% if (locals.url) { %>
      <a href="<%= url %>"><%= title %></a>
      <% } else { %>
      <%= title %>
      <% } %>
    </h3>
    <% } %>
    
    <% if (locals.subtitle) { %>
    <div class="content-card-subtitle"><%= subtitle %></div>
    <% } %>
    
    <% if (locals.content) { %>
    <div class="content-card-text"><%= content %></div>
    <% } %>
    
    <% if (locals.url && locals.linkText) { %>
    <div class="content-card-footer">
      <a href="<%= url %>" class="btn"><%= linkText %></a>
    </div>
    <% } %>
  </div>
</div>
