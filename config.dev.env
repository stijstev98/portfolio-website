# Development Environment Configuration
# Auto-detected as development environment

# Environment
NODE_ENV=development
ELEVENTY_ENV=development

# Strapi Configuration
STRAPI_HOST=127.0.0.1
STRAPI_PORT=1337
STRAPI_URL=http://127.0.0.1:1337
STRAPI_ADMIN_URL=http://127.0.0.1:1337/admin
STRAPI_TELEMETRY_DISABLED=true

# Database Configuration
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=../strapi-data/strapi.db

# Eleventy Configuration
ELEVENTY_HOST=127.0.0.1
ELEVENTY_PORT=8080
ELEVENTY_URL=http://127.0.0.1:8080

# Webhook Configuration
WEBHOOK_HOST=127.0.0.1
WEBHOOK_PORT=3000
WEBHOOK_URL=http://127.0.0.1:3000

# SSL Configuration (for HTTPS testing in dev)
SSL_ENABLED=false
SSL_CERT_PATH=../ssl-dev/cert.pem
SSL_KEY_PATH=../ssl-dev/key.pem

# Build Configuration
SITE_BUILD_PATH=./site-build
UPLOADS_PATH=../portfolio-cms/public/uploads

# Process Management
AUTO_RESTART=true
LOG_LEVEL=debug
