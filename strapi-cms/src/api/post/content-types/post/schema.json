{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "post_title": {
      "type": "string"
    },
    "post_description": {
      "type": "text"
    },
    "post_header_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "post_body": {
      "type": "blocks"
    },
    "post_preview_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "post_images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "short_description": {
      "type": "string"
    },
    "rich_content": {
      "type": "dynamiczone",
      "components": [
        "shared.video-embed",
        "shared.rich-text",
        "shared.media",
        "shared.callout",
        "shared.book-flip"
      ]
    },
    "post_body2": {
      "type": "customField",
      "customField": "plugin::lexical.lexical"
    }
  }
}
