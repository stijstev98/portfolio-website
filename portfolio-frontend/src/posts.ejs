---
layout: layouts/base.ejs
title: All Posts
---

<section class="posts-listing-section">
  <div class="container">
    <h1 class="page-title">All Posts</h1>
    
    <div class="posts-grid">
      <% if (collections.posts && collections.posts.length > 0) { %>
        <% collections.posts.forEach(function(post) { %>
          <article class="post-card">
            <% if (post.data.previewImage) { %>
              <a href="<%= post.url %>" class="post-card-image-link">
                <img src="<%= post.data.previewImage %>" 
                     alt="<%= post.data.title %>" 
                     class="post-card-image"
                     loading="lazy">
              </a>
            <% } %>
            
            <div class="post-card-content">
              <h2 class="post-card-title">
                <a href="<%= post.url %>"><%= post.data.title %></a>
              </h2>
              
              <% if (post.data.description) { %>
                <p class="post-card-description"><%= post.data.description %></p>
              <% } %>
              
              <div class="post-card-meta">
                <time datetime="<%= post.data.date %>">
                  <%= dateFns.format(new Date(post.data.date), 'MMMM d, yyyy') %>
                </time>
              </div>
              
              <a href="<%= post.url %>" class="post-card-read-more">Read more â†’</a>
            </div>
          </article>
        <% }); %>
      <% } else { %>
        <p class="no-posts-message">No posts available at the moment.</p>
      <% } %>
    </div>
  </div>
</section>