---
layout: layouts/base.ejs
pagination:
  data: photographyPosts
  size: 10
  alias: list
  reverse: true
permalink: '<% if (pagination.pageNumber > 0) { %><%= `/photography/page${pagination.pageNumber + 1}/index.html` %><% } else { %>photography/index.html<% } %>'
eleventyComputed:
  title: '<% if (pagination.pageNumber > 0) { %><%= `Photography - Page ${pagination.pageNumber + 1} | ${site.title}` %><% } else { %>Photography | <%= site.title %><% } %>'
  description: "Explore my photography collections and visual stories."
bodyClass: light-theme
---

<div class="photography-landing">
  <!-- Photography header section -->
  <section class="photography-header-section">
    <div class="post-header-content-text">
      <div class="post-header-content-inner">
        <h1 class="post-title">Photography</h1>
        <p class="post-short-description">Explore my photography collections and visual stories.</p>
      </div>
    </div>
  </section>

  <% if (photographyPosts && photographyPosts.length > 0) { %>
  <div id="masonry-gallery">
    <%- include('./_includes/components/masonry-gallery', { 
      posts: photographyPosts, 
      className: 'photography-gallery',
      variedColumns: true 
    }) %>
  </div>
  <% } else { %>
  <div class="empty-state">
    <h2>Photography Portfolio</h2>
    <p>No photography collections are available at the moment. Check back later for updates.</p>
  </div>
  <% } %>
</div>

