# Production Environment Configuration
# Auto-detected as production environment

# Environment
NODE_ENV=production
ELEVENTY_ENV=production

# Domain Configuration
PRIMARY_DOMAIN=stijnstevens.be
ADMIN_DOMAIN=admin.stijnstevens.be

# Strapi Configuration
STRAPI_HOST=127.0.0.1
STRAPI_PORT=1337
STRAPI_URL=http://127.0.0.1:1337
STRAPI_ADMIN_URL=https://admin.stijnstevens.be
STRAPI_TELEMETRY_DISABLED=true

# Database Configuration
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=../strapi-data/strapi.db

# Nginx Configuration
NGINX_CONFIG_PATH=./nginx-prod
NGINX_PID_FILE=/var/run/nginx.pid
NGINX_LOG_PATH=../logs/nginx

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=../nginx/certbot/conf/live
SSL_CERT_RENEWAL_ENABLED=true

# Webhook Configuration
WEBHOOK_HOST=127.0.0.1
WEBHOOK_PORT=3000
WEBHOOK_URL=http://127.0.0.1:3000
STRAPI_WEBHOOK_SECRET=

# Build Configuration
SITE_BUILD_PATH=../site-build
UPLOADS_PATH=../portfolio-cms/public/uploads

# Process Management
AUTO_RESTART=true
LOG_LEVEL=info
LOG_PATH=../logs

# Monitoring
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=../backups
BACKUP_RETENTION_DAYS=30
